---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Thank You! | It Girl Auraa">
  <div class="min-h-[60vh] flex items-center justify-center px-4">
    <div class="max-w-xl text-center">
      <h1 class="font-display text-3xl sm:text-4xl text-espresso mb-4">
        Welcome to the It Girl Community!
      </h1>
      <p class="text-bronze mb-8">
        Thank you for subscribing to our newsletter. Get ready for exclusive beauty tips, product recommendations, and lifestyle inspiration delivered straight to your inbox.
      </p>
      <a 
        href="/" 
        class="inline-block px-6 py-2 bg-espresso text-white font-medium rounded-md hover:bg-espresso/80 transition-colors"
      >
        Return Home
      </a>
    </div>
  </div>
</Layout> 