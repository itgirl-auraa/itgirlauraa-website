---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';

const about = await getEntry('pages', 'about');
const { Content, components } = await about.render();
---

<Layout title="About Me - IT Girl Auraa">
  <div class="mdx-content">
    <Content components={components} />
  </div>
</Layout>

<style>
  /* MDX specific styles */
  .mdx-content :global(h1) {
    @apply font-display text-4xl md:text-5xl text-espresso mb-8 text-center;
  }
  
  .mdx-content :global(h2) {
    @apply font-display text-2xl text-espresso mb-6 text-center;
  }
  
  .mdx-content :global(h3) {
    @apply font-display text-xl text-espresso mb-4;
  }
  
  .mdx-content :global(p) {
    @apply text-bronze mb-6;
  }
  
  .mdx-content :global(hr) {
    @apply border-beige/30 my-12;
  }
  
  .mdx-content :global(.grid) {
    @apply my-8;
  }
</style>
