---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const picks = await getCollection('picks');
const categories = [...new Set(picks.map(pick => pick.data.category))];

// Sort options
const sortOptions = [
  { label: 'Newest First', value: 'newest' },
  { label: 'Price: Low to High', value: 'price-asc' },
  { label: 'Price: High to Low', value: 'price-desc' },
  { label: 'Most Popular', value: 'popular' },
];
---

<Layout title="It Girl Picks - Curated Amazon Finds">
  <!-- Hero Section -->
  <section class="py-16 bg-background">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="font-display text-4xl md:text-5xl text-gray-900 mb-4">
        It Girl Picks
      </h1>
      <p class="text-lg md:text-xl text-gray-600 font-light max-w-2xl mx-auto">
        Carefully curated collections of products to elevate your lifestyle and wellness journey.
      </p>
    </div>
  </section>

  <!-- Search & Filter Section -->
  <section class="sticky top-16 z-40 bg-white/95 backdrop-blur-sm border-y border-gray-100 py-4">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row gap-4 items-center justify-between">
        <!-- Search -->
        <div class="relative w-full md:w-auto md:min-w-[300px]">
          <input 
            type="search" 
            placeholder="Search collections..."
            class="w-full pl-10 pr-4 py-2 rounded-full border border-gray-200 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
          />
          <svg class="absolute left-3 top-1/2 -translate-y-1/2 h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </div>

        <!-- Categories -->
        <div class="flex flex-wrap justify-center gap-2">
          <button class="px-4 py-1.5 rounded-full bg-primary text-white text-sm font-medium">
            All
          </button>
          {categories.map(category => (
            <button class="px-4 py-1.5 rounded-full bg-gray-100 hover:bg-gray-200 text-gray-600 text-sm font-medium transition-colors">
              {category}
            </button>
          ))}
        </div>

        <!-- Sort -->
        <div class="relative w-full md:w-auto">
          <select 
            class="w-full md:w-auto appearance-none pl-4 pr-10 py-2 rounded-full border border-gray-200 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent bg-white"
          >
            {sortOptions.map(option => (
              <option value={option.value}>{option.label}</option>
            ))}
          </select>
          <svg class="absolute right-3 top-1/2 -translate-y-1/2 h-5 w-5 text-gray-400 pointer-events-none" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </div>
      </div>
    </div>
  </section>

  <!-- Product Collection Grid -->
  <section class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {picks.map(pick => (
          <article class="group bg-white rounded-2xl shadow-sm hover:shadow-md transition-all duration-300">
            <!-- Image -->
            <div class="aspect-[3/4] rounded-t-2xl overflow-hidden">
              <img 
                src={pick.data.image} 
                alt={pick.data.title}
                class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              />
            </div>

            <!-- Content -->
            <div class="p-6">
              <div class="flex items-center gap-2 mb-4">
                <span class="px-3 py-1 rounded-full text-xs font-medium bg-primary/10 text-primary">
                  {pick.data.category}
                </span>
                <div class="flex items-center text-yellow-400 text-sm">
                  ★★★★★
                  <span class="text-gray-500 ml-1">(12 products)</span>
                </div>
              </div>

              <h2 class="font-display text-xl text-gray-900 mb-2">
                {pick.data.title}
              </h2>

              <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                {pick.data.description}
              </p>

              <!-- Product Thumbnails -->
              <div class="flex items-center gap-2 mb-4">
                <div class="w-12 h-12 rounded-lg overflow-hidden bg-gray-100">
                  <img src={pick.data.image} alt="" class="w-full h-full object-cover" />
                </div>
                <div class="w-12 h-12 rounded-lg overflow-hidden bg-gray-100">
                  <img src={pick.data.image} alt="" class="w-full h-full object-cover" />
                </div>
                <div class="w-12 h-12 rounded-lg overflow-hidden bg-gray-100">
                  <img src={pick.data.image} alt="" class="w-full h-full object-cover" />
                </div>
                <div class="w-12 h-12 rounded-lg bg-gray-100 flex items-center justify-center text-sm font-medium text-gray-500">
                  +3
                </div>
              </div>

              <!-- Review Quote -->
              <blockquote class="text-sm italic text-gray-500 mb-4 font-serif">
                "These products have completely transformed my morning routine!"
              </blockquote>

              <div class="flex items-center justify-between">
                <span class="text-gray-900 font-medium">
                  ${pick.data.price.toFixed(2)}
                </span>
                <a 
                  href={pick.data.amazon_link}
                  class="inline-flex items-center px-4 py-2 rounded-full bg-primary hover:bg-primary-dark text-white text-sm font-medium transition-colors"
                >
                  Shop Now
                  <svg class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                  </svg>
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>

      <!-- Load More -->
      <div class="mt-12 text-center">
        <button class="px-8 py-3 rounded-full border-2 border-primary text-primary hover:bg-primary hover:text-white font-medium transition-all duration-300">
          Load More
        </button>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Custom scrollbar for webkit browsers */
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }

  ::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb {
    background: #C4A3B0;
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #B08E9B;
  }
</style> 