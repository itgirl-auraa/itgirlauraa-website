---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import ProductCard from '../../components/ProductCard.astro';

const picks = await getCollection('picks');
const categories = [...new Set(picks.map(pick => pick.data.category))];

// Sort options
const sortOptions = [
  { label: 'Newest First', value: 'newest' },
  { label: 'Price: Low to High', value: 'price-asc' },
  { label: 'Price: High to Low', value: 'price-desc' },
  { label: 'Most Popular', value: 'popular' },
];
---

<Layout 
  title="IT Girl Picks - Curated Amazon Finds" 
  description="Carefully curated collections of products to elevate your lifestyle and wellness journey."
  ogImage={picks[0]?.data.image || "/hero-collage.jpg"}
>
  <!-- Hero Section -->
  <section class="py-16 bg-background">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="font-display text-4xl md:text-5xl text-espresso mb-4">
        IT Girl Picks
      </h1>
      <p class="text-lg md:text-xl text-bronze font-light max-w-2xl mx-auto">
        Carefully curated collections of products to elevate your lifestyle and wellness journey.
      </p>
    </div>
  </section>

  <!-- Search & Filter Section -->
  <section class="sticky top-16 z-40 bg-white/95 backdrop-blur-sm border-y border-beige/30 py-4">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row gap-4 items-center justify-between">
        <!-- Search -->
        <div class="relative w-full md:w-auto md:min-w-[300px]">
          <input 
            type="search" 
            placeholder="Search collections..."
            class="w-full pl-10 pr-4 py-2 rounded-full border border-beige focus:outline-none focus:ring-2 focus:ring-espresso focus:border-transparent"
          />
          <svg class="absolute left-3 top-1/2 -translate-y-1/2 h-5 w-5 text-bronze" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </div>

        <!-- Categories -->
        <div class="flex flex-wrap justify-center gap-2">
          <button class="px-4 py-1.5 rounded-full bg-espresso text-white text-sm font-medium">
            All
          </button>
          {categories.map(category => (
            <button class="px-4 py-1.5 rounded-full bg-beige hover:bg-beige/70 text-espresso text-sm font-medium transition-colors">
              {category}
            </button>
          ))}
        </div>

        <!-- Sort -->
        <div class="relative w-full md:w-auto">
          <select 
            class="w-full md:w-auto appearance-none pl-4 pr-10 py-2 rounded-full border border-beige focus:outline-none focus:ring-2 focus:ring-espresso focus:border-transparent bg-white"
          >
            {sortOptions.map(option => (
              <option value={option.value}>{option.label}</option>
            ))}
          </select>
          <svg class="absolute right-3 top-1/2 -translate-y-1/2 h-5 w-5 text-bronze pointer-events-none" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </div>
      </div>
    </div>
  </section>

  <!-- Product Collection Grid -->
  <section class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {picks.map((pick, index) => (
          <article class="group rounded-2xl shadow-sm hover:shadow-md transition-all duration-300 overflow-hidden bg-white flex flex-col">
            <a href={`/picks/${pick.slug}`} class="flex flex-col h-full" aria-labelledby={`pick-title-${pick.slug}`}>
    
              <!-- Image Top -->
              {pick.data.image ? (
                <div class="aspect-[2/3] overflow-hidden">
                  <img 
                    src={pick.data.image} 
                    alt={pick.data.title}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                    loading={index < 6 ? "eager" : "lazy"}
                  />
                </div>
                ) : (
                  <div class="aspect-[2/3] bg-beige/30"></div>
                )}

                <!-- White Content Box Below -->
                <div class="px-4 pt-3 pb-4 flex-grow flex flex-col">
      
                  <h2 id={`pick-title-${pick.slug}`} class="font-display text-lg text-expressob font-semibold">
                    {pick.data.title}
                  </h2>
         
                  <!-- Tag and Button Row -->
                  <div class="flex justify-between items-center mt-auto pt-2">
                    <span class="px-3 py-1 rounded-full text-xs font-medium bg-espresso/10 text-espresso whitespace-nowrap">
                      {pick.data.category}
                    </span>

                    <span class="inline-flex items-center gap-1 px-3 py-1.5 rounded-full bg-espresso hover:bg-espresso/80 text-white text-xs font-medium transition-colors">
                      View
                      <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                      </svg>
                    </span>
                  </div>
                </div>
              </a>
            </article>
        ))}
      </div>

      <!-- Load More -->
      <div class="mt-12 text-center">
        <button class="px-8 py-3 rounded-full border-2 border-espresso text-espresso hover:bg-espresso hover:text-white font-medium transition-all duration-300">
          Load More
        </button>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Custom scrollbar for webkit browsers */
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }

  ::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb {
    background: #4B2F2F;
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #4B2F2F99;
  }
</style> 