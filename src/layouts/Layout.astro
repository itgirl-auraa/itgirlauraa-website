---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { 
  title, 
  description = "Your favorite It Girl lifestyle blog featuring curated Amazon picks and beauty tips",
  ogImage = "/hero-collage.jpg"
} = Astro.props;

// Generate full URL for OG tags
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL(ogImage, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO & Open Graph Tags -->
    <title>{title}</title>
    <link rel="canonical" href={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />
    
    <!-- Netlify Identity Widget -->
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;0,600;1,400&family=Poppins:wght@300;400;500;600&family=Libre+Baskerville:ital@0;1&display=swap" rel="stylesheet">
  </head>
  <body class="font-sans bg-cream">
    <Header />
    
    <!-- Main Content -->
    <main id="main-content">
      <slot />
    </main>

    <!-- Newsletter Section -->
    <section class="bg-beige py-16" aria-labelledby="newsletter-heading">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 id="newsletter-heading" class="font-display text-3xl text-espresso mb-4">Join the It Girl Community</h2>
          <p class="text-bronze mb-8 max-w-lg mx-auto">
            Get exclusive beauty tips, product recommendations, and lifestyle inspiration delivered straight to your inbox.
          </p>
          <form class="max-w-md mx-auto" aria-labelledby="newsletter-heading">
            <div class="flex flex-col sm:flex-row gap-2">
              <label for="email-input" class="sr-only">Email address</label>
              <input
                id="email-input"
                type="email"
                placeholder="Enter your email"
                class="w-full sm:flex-1 px-4 py-2 rounded-md border border-beige/70 bg-vanilla focus:outline-none focus:ring-2 focus:ring-espresso focus:border-transparent"
                required
              />
              <button
                type="submit"
                class="w-full sm:w-auto px-6 py-2 bg-espresso text-white rounded-md hover:bg-espresso/80 transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-espresso"
              >
                Subscribe
              </button>
            </div>
          </form>
        </div>
      </div>
    </section>

    <Footer />

    <style is:global>
      :root {
        --font-sans: 'Poppins', system-ui, sans-serif;
        --font-serif: 'Libre Baskerville', Georgia, serif;
        --font-display: 'Playfair Display', serif;
      }

      html {
        font-family: var(--font-sans);
        scroll-behavior: smooth;
      }

      .font-display {
        font-family: var(--font-display);
      }

      .font-serif {
        font-family: var(--font-serif);
      }

      /* Smooth scrolling */
      html {
        scroll-behavior: smooth;
      }

      /* Base styles */
      body {
        font-feature-settings: "cv02", "cv03", "cv04", "cv11";
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      /* Focus styles */
      *:focus-visible {
        outline: 2px solid theme('colors.espresso');
        outline-offset: 2px;
      }

      /* Selection styles */
      ::selection {
        background-color: theme('colors.espresso');
        color: white;
      }

      /* Transitions */
      .transition-all {
        transition-property: all;
        transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
        transition-duration: 300ms;
      }

      /* Custom scrollbar for webkit browsers */
      ::-webkit-scrollbar {
        width: 8px;
        height: 8px;
      }

      ::-webkit-scrollbar-track {
        background: theme('colors.vanilla');
        border-radius: 4px;
      }

      ::-webkit-scrollbar-thumb {
        background: theme('colors.espresso');
        border-radius: 4px;
      }

      ::-webkit-scrollbar-thumb:hover {
        background: theme('colors.espresso/80');
      }
    </style>
  </body>
</html> 