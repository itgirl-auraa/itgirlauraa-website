---
import '../styles/global.css';
import Header from '../components/Header.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Your favorite It Girl lifestyle blog featuring curated Amazon picks and beauty tips" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;0,600;1,400&family=Poppins:wght@300;400;500;600&family=Libre+Baskerville:ital@0;1&display=swap" rel="stylesheet">
  </head>
  <body class="font-sans bg-[#FDFCF8]">
    <Header />
    <!-- Navigation -->
    <nav class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <!-- Logo -->
          <a href="/" class="font-display text-2xl text-gray-900">
            It girl auraa
          </a>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center gap-8">
            <a href="/" class="text-gray-600 hover:text-[#C4A3B0] transition-colors">Home</a>
            <a href="/picks" class="text-gray-600 hover:text-[#C4A3B0] transition-colors">It Girl Picks</a>
            <a href="/blog" class="text-gray-600 hover:text-[#C4A3B0] transition-colors">Glow Journal</a>
            <a href="/about" class="text-gray-600 hover:text-[#C4A3B0] transition-colors">About</a>
          </div>

          <!-- Mobile Menu Button -->
          <button 
            id="menuButton"
            class="md:hidden p-2 rounded-md text-gray-600 hover:text-gray-900 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-[#C4A3B0]"
          >
            <span class="sr-only">Open menu</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile Menu -->
      <div 
        id="mobileMenu"
        class="hidden md:hidden bg-white border-t border-gray-100"
      >
        <div class="px-2 pt-2 pb-3 space-y-1">
          <a href="/" class="block px-3 py-2 rounded-md text-gray-600 hover:text-[#C4A3B0] hover:bg-gray-50">Home</a>
          <a href="/picks" class="block px-3 py-2 rounded-md text-gray-600 hover:text-[#C4A3B0] hover:bg-gray-50">It Girl Picks</a>
          <a href="/blog" class="block px-3 py-2 rounded-md text-gray-600 hover:text-[#C4A3B0] hover:bg-gray-50">Glow Journal</a>
          <a href="/about" class="block px-3 py-2 rounded-md text-gray-600 hover:text-[#C4A3B0] hover:bg-gray-50">About</a>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="pt-16">
      <slot />
    </main>

    <!-- Newsletter Section -->
    <section class="bg-[#E8F3E8] py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 class="font-display text-3xl text-gray-900 mb-4">Join the It Girl Community</h2>
          <p class="text-gray-600 mb-8 max-w-lg mx-auto">
            Get exclusive beauty tips, product recommendations, and lifestyle inspiration delivered straight to your inbox.
          </p>
          <form class="max-w-md mx-auto">
            <div class="flex gap-2">
              <input
                type="email"
                placeholder="Enter your email"
                class="flex-1 px-4 py-2 rounded-md border border-gray-200 focus:outline-none focus:ring-2 focus:ring-[#C4A3B0] focus:border-transparent"
                required
              />
              <button
                type="submit"
                class="px-6 py-2 bg-[#C4A3B0] text-white rounded-md hover:bg-[#B08E9B] transition-colors"
              >
                Subscribe
              </button>
            </div>
          </form>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-100">
      <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <!-- Brand -->
          <div class="md:col-span-2">
            <a href="/" class="font-display text-2xl text-gray-900 mb-4 block">
              It girl auraa
            </a>
            <p class="text-gray-600 mb-6 max-w-md">
              Curating beauty, lifestyle, and wellness essentials for the modern It Girl. Join me on the journey to becoming our best selves.
            </p>
            <div class="flex gap-4">
              <a href="https://www.instagram.com/itgirl_auraa/" class="text-gray-400 hover:text-[#C4A3B0]" target="_blank" rel="noopener">
                <span class="sr-only">Instagram</span>
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
