---
interface Props {
  platform: string;
  url: string;
  label: string;
  icon: string;
}

const { platform, url, label, icon } = Astro.props;
---

<a 
  href={url} 
  target="_blank" 
  rel="noopener" 
  class="flex items-center gap-3 p-4 rounded-lg bg-white hover:bg-beige/10 transition-colors"
>
  <span class="text-2xl">{icon}</span>
  <div>
    <span class="font-medium text-espresso">{platform}</span>
    <p class="text-sm text-bronze">{label}</p>
  </div>
</a> 