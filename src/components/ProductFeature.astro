---
interface Props {
  title: string;
  description: string;
  features: string[];
  image?: string;
  isReversed?: boolean;
  affiliateLink?: string;
}

const { title, description, features, image, isReversed = false, affiliateLink } = Astro.props;
---

<div class="bg-white rounded-lg shadow-sm p-6 my-8">
  <div class="flex flex-col md:flex-row gap-6">
    <!-- Product Details -->
    <div class="w-full md:w-2/3">
      <h3 class="font-display text-2xl text-espresso mb-4">
        {affiliateLink ? (
          <a href={affiliateLink} target="_blank" rel="nofollow noopener" class="text-espresso hover:text-bronze transition-colors">
            {title}
          </a>
        ) : (
          title
        )}
      </h3>
      <p class="text-bronze mb-6">{description}</p>
      
      <div class="bg-beige/20 p-6 rounded-lg">
        <h4 class="font-medium text-espresso mb-3">Key Ingredients:</h4>
        <ul class="space-y-2">
          {features.map(feature => (
            <li class="flex items-start">
              <span class="text-espresso mr-2">â€¢</span>
              <span class="text-bronze">{feature}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <!-- Product Image -->
    {image && (
      <div class="w-full md:w-1/3 flex flex-col">
        <div class="aspect-[2/3] rounded-lg overflow-hidden bg-beige/20 shadow-md">
          {affiliateLink ? (
            <a href={affiliateLink} target="_blank" rel="nofollow noopener" class="block w-full h-full">
              <img 
                src={image} 
                alt={title}
                class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
              />
            </a>
          ) : (
            <img 
              src={image} 
              alt={title}
              class="w-full h-full object-cover"
            />
          )}
        </div>
        
        {affiliateLink && (
          <a 
            href={affiliateLink} 
            target="_blank" 
            rel="nofollow noopener" 
            class="mt-4 bg-espresso text-white text-center py-2 px-4 rounded-md hover:bg-espresso/80 transition block w-full"
          >
            Shop on Amazon
          </a>
        )}
      </div>
    )}
  </div>
</div> 