---
interface Props {
  name: string;
  description: string;
  price?: number;
  image: string;
}

const { name, description, price, image } = Astro.props;
---

<div class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition-shadow h-full">
  <div class="aspect-[1/1] overflow-hidden">
    <img 
      src={image} 
      alt={name}
      class="w-full h-full object-cover"
    />
  </div>
  <div class="p-3">
    <h3 class="font-display text-base text-espresso mb-1">{name}</h3>
    <p class="text-xs text-bronze line-clamp-2">{description}</p>
    {price && <p class="font-medium text-espresso text-sm mt-2">${price.toFixed(2)}</p>}
  </div>
</div> 