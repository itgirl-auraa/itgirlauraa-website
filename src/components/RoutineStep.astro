---
interface Props {
  number: number;
  title: string;
  description: string;
  tip: string;
}

const { number, title, description, tip } = Astro.props;
---

<div class="bg-white rounded-lg shadow-sm p-4 sm:p-5 relative mb-6">
  <div class="absolute -top-4 -left-3 sm:-left-4 w-8 h-8 sm:w-9 sm:h-9 bg-espresso text-white rounded-full flex items-center justify-center font-bold text-base shadow-md">
    {number}
  </div>
  
  <h3 class="font-display text-xl text-espresso mb-2 pl-6 -mt-1 sm:-mt-2">{title}</h3>
  <p class="text-bronze mb-3">{description}</p>
  
  <div class="bg-beige/20 p-2.5 rounded-md">
    <p class="text-sm italic flex items-start gap-1.5 no-underline">
      <span class="text-espresso flex-shrink-0">ðŸ’¡</span>
      <span>{tip}</span>
    </p>
  </div>
</div> 